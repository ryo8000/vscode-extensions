{
  // Show variable values inline while debugging.
  "debug.inlineValues": true,
  // How to show the debug console
  "debug.internalConsoleOptions": "openOnSessionStart",
  // How to show the debug view.
  "debug.openDebug": "openOnSessionStart",
  // Whether to enable bracket pair coloring.
  "editor.bracketPairColorization.enabled": true,
  // Whether formatting should be included when copying text.
  "editor.copyWithSyntaxHighlighting": false,
  // Whether the editor should allow moving selected text via drag and drop.
  "editor.dragAndDrop": false,
  // Automatically format when pasting.
  "editor.formatOnPaste": true,
  // Automatically format when saving.
  "editor.formatOnSave": true,
  // Automatically format the line after typing.
  "editor.formatOnType": true,
  // Whether to show a line of the same color between bracket pairs.
  "editor.guides.bracketPairs": true,
  // Maximum width of the minimap.
  "editor.minimap.maxColumn": 60,
  // How to show the slider in the minimap.
  "editor.minimap.showSlider": "always",
  // Size of the minimap.
  "editor.minimap.size": "fit",
  // Render control characters.
  "editor.renderControlCharacters": true,
  // How to render whitespace characters.
  "editor.renderWhitespace": "all",
  // How to show the folding symbols
  "editor.showFoldingControls": "always",
  // The number of spaces a tab is equal to.
  "editor.tabSize": 2,
  // Characters that will be used as word separators.
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?　、。！？「」【】『』（）",
  // Whether lines should wrap.
  "editor.wordWrap": "on",
  // Naming strategy for duplicate names.
  "explorer.incrementalNaming": "smart",
  // Associating files with languages.
  "files.associations": {
    // Defined it if you need it.
  },
  // The default end of line character.
  "files.eol": "\n",
  // Path patterns of files and directories to hide.
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    // Defined it if you need it.
  },
  // Insert a final new line at the end of the file when saving it.
  "files.insertFinalNewline": true,
  // Remove blank lines after the final line when saving a file.
  "files.trimFinalNewlines": true,
  // Remove spaces at the end of each line when saving a file.
  "files.trimTrailingWhitespace": true,
  // Path patterns of files and directories to be excluded from monitoring.
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    // Defined it if you need it.
    "**/images/**": true,
  },
  // Path patterns of files and directories to be excluded from the search.
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    // Defined it if you need it.
  },
  // Whether to show line numbers for search results in the search view.
  "search.showLineNumbers": true,
  // Whether to confirm on exit if there are active terminal sessions.
  "terminal.integrated.confirmOnExit": "always",
  // Whether text selected in the terminal will be copied to the clipboard.
  "terminal.integrated.copyOnSelection": true,
  // Editor tab size.
  "workbench.editor.tabSizing": "shrink",
  // File icon theme.
  "workbench.iconTheme": "material-icon-theme",
  // Which editor is shown at startup.
  "workbench.startupEditor": "readme",
  /* Specific settings for each language and file. */
  "[csv]": {
    // Whether lines should wrap.
    "editor.wordWrap": "off",
  },
  "[json]": {
    // Default formatter.
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[jsonc]": {
    // Default formatter.
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[log]": {
    // Whether lines should wrap.
    "editor.wordWrap": "off",
  },
  "[python]": {
    // The number of spaces a tab is equal to.
    "editor.tabSize": 4,
  },
  "[tsv]": {
    // Insert spaces when pressing `Tab`.
    "editor.insertSpaces": false,
    // Whether lines should wrap.
    "editor.wordWrap": "off",
  },
}
